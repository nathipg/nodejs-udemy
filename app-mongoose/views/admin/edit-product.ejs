<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
  <form class="product-form" action="<%= editing ? '/admin/edit-product' : '/admin/add-product' %>" method="POST">
    <% if(editing) { %>
    <input type="hidden" name="id" value="<%= editing ? product._id : '' %>">
    <% } %>

    <div class="form-control">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" value="<%= editing ? product.title : '' %>">
    </div>
    <div class="form-control">
      <label for="imgUrl">Image URL</label>
      <input type="text" name="imgUrl" id="imgUrl" value="<%= editing ? product.imgUrl : '' %>">
    </div>
    <div class="form-control">
      <label for="price">Price</label>
      <input type="number" name="price" id="price" step="0.01" value="<%= editing ? product.price : '' %>">
    </div>
    <div class="form-control">
      <label for="description">Description</label>
      <textarea name="description" id="description" rows="5"><%= editing ? product.description : '' %></textarea>
    </div>

    <button class="btn" type="submit"><%= editing ? 'Edit' : 'Add' %> Product</button>
  </form>
</main>

<%- include('../includes/end.ejs') %>
