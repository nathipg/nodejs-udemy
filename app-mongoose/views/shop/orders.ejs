<%- include('../includes/head.ejs') %>
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>
      <main>
        <% if(orders.length <= 0) { %>
          <h1>No order</h1>
        <% } else { %>
          <ul>
            <% orders.forEach(order => { %>
              <li>
                <h1>#<%= order._id %></h1>
                <ul>
                  <% order.products.forEach(item => { %>
                    <li><%= item.product.title %> (<%= item.quantity %>) - <a href="/orders/<%= order._id %>">Invoice</a></li>
                  <% }); %>
                </ul>
              </li>
            <% }); %>
          </ul>
        <% } %>
      </main>

      <%- include('../includes/end.ejs') %>